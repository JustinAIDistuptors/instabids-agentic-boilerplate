# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# Google Cloud / ADK Configuration
GOOGLE_API_KEY=your-google-api-key
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_CLOUD_QUOTA_PROJECT=your-quota-project-id

# OpenAI Configuration (for vision features)
OPENAI_API_KEY=your-openai-api-key

# ADK Settings
GOOGLE_GENAI_USE_VERTEXAI=False  # Set to True if using Vertex AI with ADC
ADK_DEV_MODE=True
ADK_LOG_LEVEL=INFO

# Application Settings
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production

# API Settings
API_HOST=0.0.0.0
API_PORT=8001
API_RELOAD=True

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Database (if using direct connection instead of Supabase client)
# DATABASE_URL=postgresql://user:password@localhost:5432/instabids

# Redis (optional, for caching)
# REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Agent Configuration
DEFAULT_MODEL_ID=gemini-2.0-flash-exp
AGENT_MAX_RETRIES=3
AGENT_TIMEOUT_SECONDS=30

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Feature Flags
ENABLE_VISION_ANALYSIS=True
ENABLE_CONTRACTOR_AGENTS=False
ENABLE_REALTIME_UPDATES=False